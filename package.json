{
  "name": "xmlbuilder2",
  "version": "0.0.5",
  "keywords": [
    "xml",
    "xmlbuilder"
  ],
  "homepage": "http://github.com/oozcitak/xmlbuilder2",
  "description": "An XML builder for node.js",
  "author": "Ozgur Ozcitak <oozcitak@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/oozcitak/xmlbuilder2.git"
  },
  "bugs": {
    "url": "http://github.com/oozcitak/xmlbuilder2/issues"
  },
  "main": "./lib/index",
  "engines": {
    "node": ">=6.0"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@oozcitak/util": "2.2.0",
    "@oozcitak/dom": "1.2.1",
    "@oozcitak/infra": "1.0.4"
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/jest": "*",
    "@types/dedent": "*",
    "@types/benchmark": "*",
    "@types/chalk": "*",
    "typescript": "*",
    "jest": "*",
    "ts-jest": "*",
    "dedent": "*",
    "glob": "*",
    "xpath": "*",
    "xmlbuilder": "*",
    "ts-node": "*",
    "benchmark": "*",
    "chalk": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.tsx?$",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "scripts": {
    "compile": "rm -rf ./lib && tsc --version && tsc",
    "test": "npm run compile && jest --coverage",
    "perf": "npm run compile && ts-node ./perf/perf.ts",
    "publish-public": "npm run test && npm publish"
  }
}
