{
  "name": "xmlbuilder2",
  "version": "0.0.1",
  "keywords": [
    "xml",
    "xmlbuilder"
  ],
  "homepage": "http://github.com/oozcitak/xmlbuilder2",
  "description": "An XML builder for node.js",
  "author": "Ozgur Ozcitak <oozcitak@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/oozcitak/xmlbuilder2.git"
  },
  "bugs": {
    "url": "http://github.com/oozcitak/xmlbuilder2/issues"
  },
  "main": "./lib/index",
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "*",
    "jest": "*",
    "@types/jest": "*",
    "ts-jest": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testEnvironment": "node"
  },
  "concatTS": [
    {
      "sourceDir": "./src/dom",
      "outputFile": "./lib/dom.ts",
      "order": [
        "Node.ts",
        "CharacterData.ts",
        "Text.ts",
        "Utility.ts",
        "HTMLCollection.ts",
        "Document.ts",
        "DocumentFragment.ts",
        "ShadowRoot.ts",
        "Element.ts",
        "NonElementParentNode.ts",
        "DocumentOrShadowRoot.ts",
        "ParentNode.ts"
      ],
      "removeImports": true,
      "deleteText": true
    }
  ],
  "scripts": {
    "pretest": "node ./scripts/concatTS.js && tsc",
    "prepublishOnly": "tsc",
    "test": "jest",
    "cover": "jest --coverage"
  }
}
